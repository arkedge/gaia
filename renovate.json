{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>arkedge/renovate-config"
  ],
  "packageRules": [
    {
      "groupName": "Typescript",
      "groupSlug": "typescript",
      "updateTypes": ["patch"],
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "groupName": "Sentry",
      "groupSlug": "sentry",
      "packageNames": ["sentry", "sentry-tracing"]
    },
    {
      "groupName": "tonic",
      "groupSlug": "tonic",
      "packageNames": [
        "tonic",
        "tonic-build",
        "tonic-health",
        "tonic-reflection",
        "tonic-web",
        "prost",
        "prost-types",
        "prost-derive"
      ]
    }
  ]
}
