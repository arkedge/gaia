{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>arkedge/renovate-config"
  ],
  "packageRules": [
    {
      "groupName": "Typescript",
      "groupSlug": "typescript",
      "updateTypes": ["patch"],
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "groupName": "Sentry",
      "groupSlug": "sentry",
      "packageNames": ["sentry", "sentry-tracing"]
    },
    {
      "groupName": "http-grpc",
      "groupSlug": "http-grpc",
      "packageNames": [
        "tonic",
        "tonic-build",
        "tonic-health",
        "tonic-reflection",
        "tonic-web",
        "prost",
        "prost-types",
        "prost-derive",
        "http",
        "axum",
        "tokio-tungstenite",
        "kble-socket",
        "tower",
        "tower-http"
      ]
    },
    {
      "groupName": "protobuf-ts",
      "groupSlug": "protobuf-ts",
      "packageNames": [
        "@protobuf-ts/runtime-rpc",
        "@protobuf-ts/runtime",
        "@protobuf-ts/grpcweb-transport"
      ]
    }
  ]
}
